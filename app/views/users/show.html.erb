<h1>ユーザー詳細</h1>
<p>名前 : <%= @user.name %></p>
<%#<p>メールアドレス : <%= @user.email %>
<p><%= image_tag @user.image_url, size: "250x200" if @user.image? %></p>
<p>プロフィール : <%= @user.profile %></p>


<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>

<% else %>
  <% if @isRoom == true %>
    <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, :value=> @user.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.posts.each do |t| %>
  <p>投稿日時：<%= t.created_at.to_s(:datetime_jp) %></p>
  <p>タイトル：<%= t.title %></p>
  <%= image_tag t.image_url, size: "250x200" if t.image? %>
  <p><%= t.time %></p>
  参加する
              <% if user_signed_in? %>
                <% if current_user.already_liked?(t) %>
                    <%= link_to post_like_path(id: t.id, post_id: t.id), method: :delete do %>
                        <i class="far fa-grin-squint"></i><%= t.likes.count %>
                    <% end %>
                <% else %>
                    <%= link_to post_likes_path(id: t.id, post_id: t.id), method: :post do %>
                        <i class="far fa-grin-squint"></i><%= t.likes.count %>
                    <% end %>
                <% end %>
            <% else %>
                <i class="far fa-grin-squint"></i><%= t.likes.count %>
            <% end %>
            <br>
  <p><%= link_to "詳細へ", post_path(t.id) %></p>

  <% if user_signed_in? && current_user.id == t.user_id %>  
    <%= link_to edit_post_path(t.id)  do %>
      <i class="fas fa-wrench"></i>
    <% end %>
    <%= link_to post_path(t.id), method: :delete do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  <% end %>
<% end %>


<h2>ユーザーが参加した投稿一覧</h2>
<% @user.liked_posts.each do |t| %>
  <%= t.created_at.to_s(:datetime_jp) %><br>
  <%= t.user.name %><br>
  <%= t.title %>
  <br>
  <%= image_tag t.image_url, size: "250x200" if t.image? %>
  <p><%= t.time %></p>
  <p><%= link_to("zoomへ", t.zoom ) %></p>
<% end %>
